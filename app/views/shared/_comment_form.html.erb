<div class="col-md-6">
  <%= form_for [@entries, @comment] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
   <%= f.hidden_field :entry_id, value: @entry.id %>
  <div class="field">
    <%= f.text_area :body, placeholder: "Compose new comment ..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>

</div>
